{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2019",
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types/**"
    ],
    "rootDir": "src",
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
